<section class="container">
    {{> post-info post}}

    {{#if loggedIn}}
    <form class="comment-form">
    <div class="form-group mb-2">
        <label for="comment-body">Comment on this post</label>
        <textarea type="text" id="comment" name="comment-body" rows="2" class="form-control"></textarea>
    </div>
        <button type="submit" class="btn btn-primary comment-submit mb-4">Add Comment</button>
    </form>
    {{/if}}

    {{> comments post.comments}}
</section>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}